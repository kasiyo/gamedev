<?xml version="1.0"?>

<!-- Game settings -->

<settings>
  <game name="Top Down Tiled Game Prototype With Death" />
  <renderer width="1024" height="768"/>
   
  <font file="Media\Fonts\AverageSans_24.spritefont"/>

  <!-- sprites -->
   
  <sprites path="Media\Images">
    <sprite name="tile" file="tile" ext ="png" frames="3"/>
    <sprite name="player" file="player.png"/>
    <sprite name="turret" file="turret.png"/>
    <sprite name="bullet" file="bullet.png"/>
    <sprite name="bullet2" file="bullet2.png"/>
    <sprite name="smoke" file="graysmoke.png"/>
    <sprite name="spark" file="spark.png"/>
    <sprite name="greenline" file="greenline.png"/>
    <sprite name="Overworld - Forest" file="Overworld - Forest - Flat 256x128.png" ext="png" frames="18"/>
    <sprite name="Overworld - Terrain 1" file="Overworld - Terrain 1 - Flat 256x128.png" ext="png" frames="18"/>
    <sprite name="Overworld - Terrain 2" file="Overworld - Terrain 2 - Flat 256x128.png" ext="png" frames="18"/>
    <sprite name="Overworld - Terrain 3" file="Overworld - Terrain 3 - Falt 256x128.png" ext="png" frames="18"/>
    <sprite name="Overworld - Water" file="Overworld - Water - Flat 256x128.png" ext="png" frames="18"/>
  </sprites>

  <!-- sound -->
  
  <sounds  path="Media\Sounds"> 
    <sound name="start" file="start.wav" instances="1"/>
    <sound name="gun" file="44magnum.wav" instances="8"/>
    <sound name="ricochet" file="ricochet.wav" instances="8"/>
    <sound name="clang" file="clang.wav" instances="4"/>
    <sound name="grunt" file="umph.wav" instances="2"/>
    <sound name="boom" file="boom.wav" instances="4"/>
  </sounds>
</settings>
